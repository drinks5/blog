<!--home.html-->
{% extends "base.html" %}
{% load custom_markdown %}

{% block title %}
Home
{% endblock   %}

{% block content %}

<div class="posts">
  
    {% if error %}
        <h1 class="post-title">没有相关文章题目</a></h1>
    {% else %}
    {% for post in post_list %}
<script type="text/javascript">
    x= {{post.id}}%2;
    $(document).ready(function(){
    
    {
      $("div#pre").addClass('col-md-7');
      $("div#last").addClass('col-md-5');
    }
  });
  </script>
        <section class="post">
            <!--div class="page-header">
              
                   <span class="label label-info">Time: {{ post.timestamp |date:'Y /m /d'}}</span>
                   <span class="label label-primary">{{ post.category }}</span>
            </div>
            <div class="blog-post">
              {{ post.content|custom_markdown|slice:"50" }}
            </div-->
 
          <hr class="featurette-divider">
          <div class="row featurette">

            <div id="pre">

              <h2 class="featurette-heading"><a href="{% url 'detail' my_args=post.id %}"> {{ post.title }} </a> </h2>
              <p class="lead">{{post.content|custom_markdown}}</p>
            </div>

            
              <div id="last">
              <img data-holder-rendered="true" src="data:image/svg+xml;base64," class="featurette-image img-responsive center-block" data-src="holder.js/500x500/auto" alt="500x500">
            </div>
          </div>
        </section>
    {% endfor %}
    {% endif %}

    {% if post_list.object_list and post_list.paginator.num_pages > 1 %}
      <div>
        <ul class="pager">
          {% if post_list.has_previous %}
            <li><a href="?page={{ post_list.previous_page_number }}">上一页</a></li>
          {% endif %}

          {% if post_list.has_next %}
            <li><a href="?page={{ post_list.next_page_number }}">下一页</a></li>
          {% endif %}
        </ul>
      </div>
    {% endif %}
</div><!-- /.blog-post -->

{% endblock %}
